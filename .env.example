# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/transcripts

# Paths
ARTIFACTS_ROOT=artifacts

# Chunking
CHUNK_SEC=1800
OVERLAP_SEC=8

# Behavior
FORCE=true
DRY_RUN=false

# Runner (optional)
# If set, transcription uses docker run <WHISPERX_IMAGE> <chunk> <out.json>
WHISPERX_IMAGE=
# Override docker binary/path if needed
DOCKER_BIN=docker
# Additional docker run args (space-separated)
DOCKER_ADDITIONAL_ARGS=

# yt-dlp binary (optional override)
YTDLP_BIN=yt-dlp

# WhisperX runtime (passed into container)
WHISPERX_MODEL=large-v2
WHISPERX_LANGUAGE=en
WHISPERX_BATCH_SIZE=16
# If unset, defaults to float16 on GPU/cuda; set explicitly if needed
WHISPERX_COMPUTE_TYPE=

# Logging
LOG_LEVEL=info
